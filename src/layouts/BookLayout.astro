---
import MainLayout from './MainLayout.astro';

export interface Props {
  frontmatter: {
    title: string;
    author: string;
    publishDate: string;
    tags: string[];
    coverImage?: string;
    link?: string;
    rating?: number;
    summary?: string;
  };
}

const { frontmatter } = Astro.props;
---

<MainLayout title={frontmatter.title} description={`Book review of ${frontmatter.title} by ${frontmatter.author}`}>
  <article class="book-review">
    <header>
      <div class="book-header">
        <div class="book-info">
          <h1>{frontmatter.title}</h1>
          <p class="author">by {frontmatter.author}</p>

          {frontmatter.rating && (
            <div class="rating">
              {Array(5).fill('').map((_, i) => (
                <span class={i < frontmatter.rating ? 'star filled' : 'star'}>â˜…</span>
              ))}
            </div>
          )}

          {frontmatter.link && (
            <div class="link">
              <a href={frontmatter.link} target="_blank" rel="noopener noreferrer">
                  Buy Book <i class="fa fa-shopping-cart"></i>
              </a>
            </div>
          )}

          <div class="tags">
            {frontmatter.tags.map((tag: string) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        </div>

        {frontmatter.coverImage && (
          <div class="book-cover">
            <img src={frontmatter.coverImage} alt={`Cover of ${frontmatter.title}`} />
          </div>
        )}
      </div>

      {frontmatter.summary && (
        <div class="summary">
          <h2>Summary</h2>
          <p>{frontmatter.summary}</p>
        </div>
      )}
    </header>

    <div class="content">
      <slot />
    </div>
  </article>
</MainLayout>
