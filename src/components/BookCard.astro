---
export interface Props {
  title: string;
  author: string;
  slug: string;
  coverImage?: string;
  tags: string[];
  rating?: number;
  summary?: string;
}

const { title, author, slug, coverImage, tags, rating, summary } = Astro.props;
---

<div class="book-card">
    <a href={`/coding-bookshelf/books/${slug}`} class="book-link">
    <div class="book-cover">
      {coverImage ? (
        <img src={coverImage} alt={`Cover of ${title}`} />
      ) : (
        <div class="placeholder-cover">
          <span>{title.charAt(0)}</span>
        </div>
      )}
    </div>

    <div class="book-info">
      <h3 class="book-title">{title}</h3>
      <p class="book-author">by {author}</p>

      {rating && (
        <div class="book-rating">
          {Array(5).fill('').map((_, i) => (
            <span class={i < rating ? 'star filled' : 'star'}>â˜…</span>
          ))}
        </div>
      )}

      <div class="book-tags">
        {tags.slice(0, 3).map((tag) => (
          <span class="tag">{tag}</span>
        ))}
      </div>

      {summary && (
        <p class="book-summary">{summary.length > 120 ? `${summary.substring(0, 120)}...` : summary}</p>
      )}
    </div>
  </a>
</div>

<style>
  .book-card {
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.3s, box-shadow 0.3s;
    background-color: #fff;
    height: 100%;
  }

  .book-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  }

  .book-link {
    display: flex;
    flex-direction: column;
    height: 100%;
    text-decoration: none;
    color: inherit;
  }

  .book-cover {
    display: flex;
    justify-content: center;
    height: 200px;
    overflow: hidden;
    background-color: #f5f5f5;
  }

  .book-cover img {
    width: 100%;
    max-width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .placeholder-cover {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    background-color: #64b5f6;
  }

  .placeholder-cover span {
    font-size: 3rem;
    color: #fff;
    font-weight: bold;
  }

  .book-info {
    padding: 1.5rem;
  }

  .book-title {
    margin: 0 0 0.5rem;
    font-size: 1.2rem;
    color: #333;
  }

  .book-author {
    margin: 0 0 1rem;
    color: #666;
    font-style: italic;
  }

  .book-rating {
    margin-bottom: 1rem;
  }

  .book-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .tag {
    background-color: #f0f0f0;
    padding: 0.2rem 0.6rem;
    border-radius: 4px;
    font-size: 0.8rem;
    color: #555;
  }

  .book-summary {
    font-size: 0.9rem;
    color: #666;
    margin: 0;
    line-height: 1.5;
  }
</style>
